@model List<Entities.Dersler>
@{
    ViewBag.Title = "KatilimciPlanlama";
    Layout = "~/Views/Shared/firmaLayout.cshtml";
}


<div class="container-fluid">
    <div class="page-header">
        <div class="row align-items-end">
            <div class="col-lg-8">
                <div class="page-header-title">
                    <i class="ik ik-file-text bg-blue"></i>
                    <div class="d-inline">
                        <h2 style="padding-top:1px;">KATILIMCI PLANLAMA</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
      @foreach (var item in Model)
      {
        <div class="col-xl-4 col-md-12">
            <div class="card comp-card">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col">
                            <h6 class="mb-25">@item.Kategoriler.KategoriAdi</h6>
                            <a href="@Url.Action("katilimciList",new { id=item.DersId})"><h3 class="fw-700 text-blue">@item.DersAdi</h3></a>

                          </div>
                        <div class="col-auto">
                            <i class="fas fa-eye bg-blue"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
      }

    </div>
</div>





